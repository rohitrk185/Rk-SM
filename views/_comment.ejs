<li id="comment-<%=comment._id%>">
    <p>
        <%= comment.content%>
        
        <% if(locals.user && ((locals.user.id == comment.user._id) || (locals.user.id == post.user._id) )) { %>
            <small>
                <a class="comment-del-btn" href="/comments/delete/<%=comment._id%>">Delete?</a>
            </small>
        <% } %>

        <br>
        <small>
        -<%= comment.user.name %>
        </small>
    </p>
</li>